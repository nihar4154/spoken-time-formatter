<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- Global (non-code-structure) rules -->
    <module name="LineLength">
        <property name="max" value="100"/>
    </module>

    <!-- Code-structure rules must go under TreeWalker -->
    <module name="TreeWalker">
        <module name="WhitespaceAfter">
            <property name="tokens" value="LITERAL_CATCH, LITERAL_FOR, LITERAL_IF, LITERAL_SWITCH, LITERAL_SYNCHRONIZED, LITERAL_TRY, LITERAL_WHILE"/>
        </module>
        <module name="NeedBraces"/>
        <module name="FinalLocalVariable"/>
    </module>



</module>
